\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tokaev-utils}[
    2023/10/01 Utils package
]

% Colour boxes
\RequirePackage[skins]{tcolorbox}

\newtcbox{\Key}{
    % Colors
    colback=white!95!black,
    colframe=white!40!black,
    % Sizes
    left=0.3em,
    right=0.3em,
    top=0.1em,
    bottom=0.1em,
    boxsep=0pt,
    arc=0.2em, % border-radius
    boxrule=0.03em, % border-size
    % Misc
    fontupper=\ttfamily\normalsize, % text font
    on line, % inline
}
