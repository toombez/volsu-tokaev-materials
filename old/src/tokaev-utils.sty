\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tokaev-utils}[
    2023/10/01 Utils package
]

% Colour boxes
\RequirePackage[skins]{tcolorbox}

\tcbset{
    inline/.style={
        % Sizes
        height=1em,
        left=0.3em,
        right=0.3em,
        top=0.1em,
        bottom=0.1em,
        boxsep=0pt,
        arc=0.2em, % border-radius
        % Misc
        fontupper=\ttfamily\normalsize, % text font
        on line, % inline
        valign=center,
    }
}

\newtcbox{\Key}{
    inline,
    % Colors
    colback=white!97!black,
    colframe=white!40!black,
    % Borders
    boxrule=0.03em, % border-size
}

\newtcbox{\Command}{
    inline,
    % Colors
    colback=white!98!black,
    % Borders
    boxrule=0em, % border-size
}

\newtcbox{\Path}{
    inline,
    % Colors
    colback=white!98!black,
    coltext=white!40!black,
    % Sizes
    boxrule=0em, % border-size
}

\newtcbox{\Note}{
    tcbox width=auto limited,
    coltext=white!40!black,
    title=Примечание,
    left skip=\parindent,
    fonttitle=\bfseries\large
}
